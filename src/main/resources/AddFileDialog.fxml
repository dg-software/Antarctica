<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootAP" prefHeight="137.0" prefWidth="342.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="ui.AddFileDialogController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Add a file...">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                    <children>
                        <Label prefHeight="25.0" prefWidth="37.0" text="Path">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="filePathInput" prefHeight="25.0" prefWidth="207.0">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </TextField>
                        <Button fx:id="selectPathButton" mnemonicParsing="false" onAction="#selectButtonClicked"
                                prefHeight="25.0" prefWidth="75.0" text="Select...">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <AnchorPane prefHeight="26.0" prefWidth="342.0">
                    <children>
                        <ButtonBar prefHeight="40.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <buttons>
                                <Button fx:id="okButton" mnemonicParsing="false" onAction="#okButtonClicked" text="OK"/>
                                <Button cancelButton="true" defaultButton="true" fx:id="CancelButton"
                                        mnemonicParsing="false" onAction="#cancelButtonClicked" text="Cancel"/>
                            </buttons>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/>
                            </padding>
                        </ButtonBar>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
